<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/frag_tutorial_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp">


    <TextView
        android:id="@+id/tv_tutorial_home_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Screen"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_tutorial_fitness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_tutorial_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_tutorial_combat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combat"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_tutorial_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_tutorial_homeText"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorialHome"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>