<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uwm.cs.fitrpg.fragments.FitnessEntryDistanceFragment">

    <EditText
        android:id="@+id/activity_entry_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="5"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_entry_distance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:labelFor="@+id/activity_entry_distance"
        android:text="@string/activity_distance_unit_short_metric"
        app:layout_constraintBaseline_toBaselineOf="@id/activity_entry_distance"
        app:layout_constraintStart_toEndOf="@+id/activity_entry_distance" />
</android.support.constraint.ConstraintLayout>
