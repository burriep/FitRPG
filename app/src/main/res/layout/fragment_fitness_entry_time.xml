<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uwm.cs.fitrpg.fragments.FitnessEntryTimeFragment">

    <TextView
        android:id="@+id/activity_entry_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/activity_entry_date"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/activity_entry_date"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_entry_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        app:layout_constraintEnd_toStartOf="@+id/activity_entry_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_date_label" />

    <TextView
        android:id="@+id/activity_entry_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/activity_entry_time"
        android:text="Time"
        app:layout_constraintStart_toStartOf="@+id/activity_entry_time"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_entry_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_entry_date"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_time_label" />

    <EditText
        android:id="@+id/activity_entry_duration_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@+id/activity_entry_duration_minutes"
        app:layout_constraintEnd_toStartOf="@+id/activity_entry_duration_minutes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_date" />

    <TextView
        android:id="@+id/activity_entry_duration_hours_label_inline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:labelFor="@+id/activity_entry_duration_hours"
        android:text="hr"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_entry_duration_hours"
        app:layout_constraintEnd_toEndOf="@+id/activity_entry_duration_hours" />

    <EditText
        android:id="@+id/activity_entry_duration_minutes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/activity_entry_duration_seconds"
        app:layout_constraintStart_toEndOf="@+id/activity_entry_duration_hours"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_date" />

    <TextView
        android:id="@+id/activity_entry_duration_minutes_label_inline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:labelFor="@+id/activity_entry_duration_minutes"
        android:text="min"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_entry_duration_minutes"
        app:layout_constraintEnd_toEndOf="@+id/activity_entry_duration_minutes" />

    <EditText
        android:id="@+id/activity_entry_duration_seconds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_entry_duration_minutes"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_date" />

    <TextView
        android:id="@+id/activity_entry_duration_seconds_label_inline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:labelFor="@+id/activity_entry_duration_seconds"
        android:text="sec"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_entry_duration_seconds"
        app:layout_constraintEnd_toEndOf="@+id/activity_entry_duration_seconds" />

</android.support.constraint.ConstraintLayout>
