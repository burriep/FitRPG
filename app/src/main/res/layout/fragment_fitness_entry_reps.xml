<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uwm.cs.fitrpg.fragments.FitnessEntryRepsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/activity_entry_sets_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Sets"
        app:layout_constraintStart_toStartOf="@+id/activity_entry_sets"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_entry_sets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/activity_entry_reps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_sets_label" />

    <TextView
        android:id="@+id/activity_entry_reps_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Reps"
        app:layout_constraintStart_toStartOf="@+id/activity_entry_reps"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_entry_reps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_entry_sets"
        app:layout_constraintTop_toBottomOf="@+id/activity_entry_reps_label" />
</android.support.constraint.ConstraintLayout>
